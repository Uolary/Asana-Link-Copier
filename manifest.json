{
  "name": "Asana Link Copier",
  "version": "1.0.0",
  "description": "Simply copying the link to the task along with the title",
  "manifest_version": 3,
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "permissions": ["storage"],
  "action":{
    "default_title": "Asana Link Copier.",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["https://app.asana.com/*"],
    "js": [
      "./scripts/content.js",
      "./scripts/linkStorage.js"
    ],
    "css": ["./styles/content.css"],
    "run_at": "document_end"
  }]
}